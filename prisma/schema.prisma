generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @default(autoincrement()) @id
  firstName String
  lastName String
  email String @unique
  password String
  role UserRole
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt // automatically store when last updated

  posts Post[]
}

enum UserRole {
  ADMIN
  USER
}

model Post {
  id Int @default(autoincrement()) @id
  title String
  content String
  published Boolean @default(false)
  createdAt DateTime @default(now())

  userId Int
  user User @relation(fields: [userId], references: [id])
}